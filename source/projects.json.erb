<%
site_url = "http://annasuprunenko.com/"
src_posts = blog("projects").articles

posts = src_posts.map do |post|
  color = rgba (post.data.color || data.colors.black), 0.7
  {
    id: post.url,
    title: post.title,
    description: page_description(post),
    color_string: "rgba(#{color.rgba.join(",")})",
    logo: project_logo_path(:svg, post),
    logo_png: project_logo_path(:png, post),
    url: URI.join(site_url, post.url).to_s,
    path: post.url,
    thumbnail: page_image(post),
    slug: post.slug
  }
end
%>

<%= posts.to_json %>
