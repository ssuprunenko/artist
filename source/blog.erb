---
title: "Blog"
long_title: "Blog"
pageable: true
per_page: 10
tagline: ""
---

<div class="b-section--basic-header">
  <h1>
    <%= current_page.data.title %>
  </h1>
  <h2>
    <%= current_page.data.tagline %>
  </h2>
</div>

<section class="s-posts-index">
  <% page_articles.each do |item| %>
   <%= macro_post_box(post: item) %>
  <% end %>
</section>

<% if next_page %>
  <div class="s-posts-index-pagination">
    <a href="<%= next_page.url %>"
        class="b-pagination-btn">
      More Articles &rarr;
    </a>
  </div>
<% end %>

<%= partial "partials/cta_section", locals: {
      text: "Looking for professional to create unique hand-drawn illustrations?"
} %>
